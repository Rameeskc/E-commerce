<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/admin/admincoupon.css">
  </head>
  <body>
    <div class="grid-container">

      <!-- Header -->
      <header class="header">
        <div class="menu-icon" onclick="openSidebar()">
          <span class="material-icons-outlined">menu</span>
        </div>
        <div class="header-left">
          <span class="material-icons-outlined">search</span>
        </div>
        <div class="header-right">
          <span class="material-icons-outlined">notifications</span>
          <span class="material-icons-outlined">email</span>
          <span class="material-icons-outlined">account_circle</span>
        </div>
      </header>
      <!-- End Header -->

      <!-- Sidebar -->
      <aside id="sidebar">
        <div class="sidebar-title">
          <div class="sidebar-brand">
            <span class="material-icons-outlined">shopping_cart</span> STORE
          </div>
          <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
        </div>

        <ul class="sidebar-list">
            <a href="/adminHome" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">dashboard</span> Dashboard
              </li>
            </a>
            <a href="/adminProduct" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">inventory_2</span> Products
              </li>
            </a>
            <a href="/adminCategories" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">category</span> Categories
              </li>
            </a>
            <a href="/adminCustomers" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">groups</span> Customers
              </li>
            </a>
            <a href="/adminBanner" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">fact_check</span> Banner
              </li>
            </a>
            <a href="/adminCoupon" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">poll</span> Coupon
              </li>
            </a>
            <a href="/adminLogout" class="side-bar-link">
            <li class="sidebar-list-item">
                <span class="material-icons-outlined">settings</span> LogOut
              </li>
            </a>
          </ul>
      </aside>
      
      
    <div>
      <div class="coupon-head"><p>coupon</p> 
        <a href="/addCoupon"><button class="btn">Add coupon</button></a>
        
      </div>
      <%couponData.forEach((data)=>{%>   
      <div class="box">
          <div class="coupon-box">
            <div class="box-column">
              <p class="p1"> code</p>
              <p class="p2">: <%= data.couponText%></p>
            </div>
            <div class="box-column">
              <p class="p1">date</p>
              <p class="p2">: <%= data.date%></p>
            </div>
            <div class="box-column">
              <p class="p1">amount</p>
              <p class="p2">: <%= data.discount%></p>
            </div>
            <div class="box-column">
              <p class="p1">eligibility</p>
              <p class="p2">: <%= data.condition%></p>
            </div>
            <div class="box-end">
              <a href="/editCoupon/<%=data._id%>"><button>edit</button></a>
              <a href="/deleteCoupon/<%=data._id%>"><button>remove</button></a>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>

  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.35.5/apexcharts.min.js"></script>
    
    <script src="js/scripts.js"></script> 
  </body>
</html>